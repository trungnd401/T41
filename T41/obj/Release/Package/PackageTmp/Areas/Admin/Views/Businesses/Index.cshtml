@model IEnumerable<T41.Areas.Admin.Model.DataModel.Business>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Cập nhật", "UpdateBusiness")
</p>
<div>
    @Html.Raw(TempData["err"])
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BusinessId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BusinessName)
        </th>        
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BusinessId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BusinessName)
        </td>       
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.BusinessId }) |
            @Html.ActionLink("Danh sách quyền", "Index", "Permissions", new { id=item.BusinessId }, null) |
            @Html.ActionLink("Delete", "Delete", new { id=item.BusinessId })
        </td>
    </tr>
}

</table>
